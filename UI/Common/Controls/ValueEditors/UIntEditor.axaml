<local:BaseNumericEditor xmlns="https://github.com/avaloniaui"
                         xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                         xmlns:local="clr-namespace:Macabre2D.UI.Common"
                         xmlns:system="clr-namespace:System;assembly=mscorlib"
                         x:TypeArguments="system:UInt32"
                         x:Class="Macabre2D.UI.Common.UIntEditor"
                         UpdateOnLostFocus="False">
    <Grid ColumnDefinitions="Auto, *"
          DataContext="{Binding $parent[local:UIntEditor]}">
        <Design.DataContext>
            <local:UIntEditor />
        </Design.DataContext>

        <TextBlock Grid.Column="0"
                   Classes="Label"
                   Text="{Binding Title}" />

        <TextBox Grid.Column="1"
                 KeyDown="InputElement_OnKeyDown"
                 LostFocus="ValueDisplay_OnLostFocus"
                 Text="{Binding ValueDisplay}" />
    </Grid>
</local:BaseNumericEditor>