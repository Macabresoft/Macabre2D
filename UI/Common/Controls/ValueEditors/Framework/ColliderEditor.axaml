<valueEditors:ValueEditorControl xmlns="https://github.com/avaloniaui"
                                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                                 xmlns:common="clr-namespace:Macabre2D.UI.Common;assembly=Macabre2D.UI.Common"
                                 xmlns:local="clr-namespace:Macabre2D.UI.Common"
                                 xmlns:framework="clr-namespace:Macabre2D.Framework;assembly=Macabre2D.Framework"
                                 xmlns:valueEditors="clr-namespace:Macabre2D.UI.Common"
                                 x:TypeArguments="framework:Collider"
                                 x:Class="Macabre2D.UI.Common.ColliderEditor">
    <Grid DataContext="{Binding $parent[local:ColliderEditor]}">
        <Design.DataContext>
            <local:ColliderEditor />
        </Design.DataContext>
        <ComboBox ItemsSource="{Binding DerivedTypes}"
                  SelectedItem="{Binding SelectedType}">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock HorizontalAlignment="Stretch"
                               Text="{Binding Name}"
                               TextAlignment="Left"
                               ToolTip.Tip="{Binding FullName}" />
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>
    </Grid>
</valueEditors:ValueEditorControl>