<local:ValueControl xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:content="clr-namespace:Macabre2D.UI.Common;assembly=Macabre2D.UI.Common"
                    xmlns:local="clr-namespace:Macabre2D.UI.Common"
                    x:TypeArguments="content:ContentDirectory"
                    x:Class="Macabre2D.UI.Common.ContentDirectoryInfoControl">
    <Grid RowDefinitions="Auto, Auto"
          ColumnDefinitions="Auto, *"
          DataContext="{Binding $parent[local:ContentDirectoryInfoControl]}">
        <Design.DataContext>
            <local:ContentDirectoryInfoControl />
        </Design.DataContext>
        <TextBlock Grid.Row="0"
                   Grid.Column="0"
                   Classes="Label"
                   Text="Created" />

        <TextBox Grid.Row="0"
                 Grid.Column="1"
                 IsReadOnly="True"
                 Text="{Binding DirectoryInfo.CreationTime}" />

        <TextBlock Grid.Row="1"
                   Grid.Column="0"
                   Classes="Label"
                   Text="Last Edited" />

        <TextBox Grid.Row="1"
                 Grid.Column="1"
                 IsReadOnly="True"
                 Text="{Binding DirectoryInfo.LastWriteTime}" />
    </Grid>
</local:ValueControl>