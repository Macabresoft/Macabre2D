<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style Selector="ListBoxItem">
        <Setter Property="BorderBrush" Value="{StaticResource TreeViewItemBackground}" />
        <Setter Property="BorderThickness" Value="2" />
        <Setter Property="CornerRadius" Value="2" />
        <Setter Property="Padding" Value="0" />
        <Setter Property="MinHeight" Value="8" />
        <Setter Property="Margin" Value="{StaticResource StandardMarginAll}" />
    </Style>

    <!--  Selected State  -->
    <Style Selector="ListBoxItem:selected /template/ ContentPresenter#PART_ContentPresenter">
        <Setter Property="BorderBrush" Value="{StaticResource TreeViewItemForeground}" />
    </Style>
</Styles>