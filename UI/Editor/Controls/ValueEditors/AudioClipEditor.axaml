<common:ValueEditorControl xmlns="https://github.com/avaloniaui"
                           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                           xmlns:framework="clr-namespace:Macabresoft.Macabre2D.Framework;assembly=Macabre2D.Framework"
                           xmlns:local="clr-namespace:Macabresoft.Macabre2D.UI.Editor"
                           xmlns:common="clr-namespace:Macabresoft.Macabre2D.UI.Common;assembly=Macabre2D.UI.Common"
                           x:TypeArguments="framework:AudioClipReference"
                           x:Class="Macabresoft.Macabre2D.UI.Editor.AudioClipEditor">
    <Grid DataContext="{Binding $parent[local:AudioClipEditor]}">
        <Design.DataContext>
            <local:AudioClipEditor />
        </Design.DataContext>

        <common:AssetReferenceControl Title="{Binding Title}"
                                      PathText="{Binding PathText}"
                                      SelectCommand="{Binding SelectCommand}"
                                      ClearCommand="{Binding ClearCommand}" />
    </Grid>
</common:ValueEditorControl>