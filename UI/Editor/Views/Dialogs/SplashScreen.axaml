<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:common="clr-namespace:Macabresoft.Macabre2D.UI.Common;assembly=Macabre2D.UI.Common"
        x:Class="Macabresoft.Macabre2D.UI.Editor.Views.Dialogs.SplashScreen"
        WindowStartupLocation="CenterScreen"
        Title="Macabre2D"
        CanResize="False"
        SystemDecorations="None"
        Width="192"
        Height="192"
        Background="{StaticResource PurpleBrush}">
    <Panel VerticalAlignment="Center"
           HorizontalAlignment="Center"
           PointerPressed="OnPointerPressed">
        <common:Icon VerticalAlignment="Center"
                     HorizontalAlignment="Center"
                     Content="{StaticResource MacabresoftIcon}"
                     Margin="{StaticResource DoubleMarginAll}"
                     Width="128"
                     Height="128" />
    </Panel>
</Window>