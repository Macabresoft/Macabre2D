<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="clr-namespace:Macabresoft.Macabre2D.UI.Editor.Controls"
             xmlns:common="clr-namespace:Macabresoft.Macabre2D.UI.Common;assembly=Macabre2D.UI.Common"
             x:Class="Macabresoft.Macabre2D.UI.Editor.Views.ProjectView">
    <Design.DataContext>
        <common:ProjectViewModel />
    </Design.DataContext>
    <Border Classes="Card"
            Margin="{StaticResource StandardMarginLeftTopBottom}">
        <controls:ValueCollectionsControl Margin="{StaticResource StandardMarginAll}"
                                          Collections="{Binding ProjectService.Editors}"
                                          IsBusy="{Binding ProjectService.IsBusy}" />
    </Border>
</UserControl>