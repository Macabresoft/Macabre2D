<ContentControl xmlns="https://github.com/avaloniaui"
                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                x:Class="Macabresoft.Macabre2D.UI.ProjectEditor.Controls.Icon">
    <ContentControl.Template>
        <ControlTemplate>
            <Canvas Height="{TemplateBinding Height}"
                    Width="{TemplateBinding Width}"
                    HorizontalAlignment="{TemplateBinding HorizontalAlignment}"
                    VerticalAlignment="{TemplateBinding HorizontalAlignment}"
                    Margin="{TemplateBinding Margin}">
                <Path Height="{Binding $parent[Canvas].Height}"
                      Width="{Binding $parent[Canvas].Width}"
                      Stretch="Uniform"
                      HorizontalAlignment="{TemplateBinding HorizontalAlignment}"
                      VerticalAlignment="{TemplateBinding HorizontalAlignment}"
                      Fill="{TemplateBinding Foreground}"
                      Data="{TemplateBinding Content}" />
            </Canvas>
        </ControlTemplate>
    </ContentControl.Template>
</ContentControl>