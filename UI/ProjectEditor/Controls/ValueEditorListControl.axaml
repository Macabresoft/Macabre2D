<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Macabresoft.Macabre2D.UI.ProjectEditor.Controls"
             x:Class="Macabresoft.Macabre2D.UI.ProjectEditor.Controls.ValueEditorListControl">
    <ScrollViewer HorizontalScrollBarVisibility="Disabled"
                  VerticalScrollBarVisibility="Visible">
        <Grid DataContext="{Binding $parent[local:ValueEditorListControl]}">
            <ItemsControl Items="{Binding Collections}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <local:GroupBox Header="{Binding Name}"
                                        Margin="{StaticResource DoubleMarginBottom}">
                            <ItemsControl Items="{Binding ValueEditors}" />
                        </local:GroupBox>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
            
            <ProgressBar IsIndeterminate="True"
                         IsVisible="{Binding IsBusy}"/>
        </Grid>
    </ScrollViewer>
</UserControl>