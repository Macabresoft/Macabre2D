<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Macabresoft.Macabre2D.UI.ProjectEditor.Controls"
             x:Class="Macabresoft.Macabre2D.UI.ProjectEditor.Controls.ColorSlider">
    <Slider Value="{Binding $parent[local:ColorSlider].ValueDisplay}"
            Minimum="0"
            Maximum="255"
            Padding="0"
            Margin="{StaticResource StandardMarginHorizontal}"
            TickFrequency="1"
            IsSnapToTickEnabled="True" />
</UserControl>